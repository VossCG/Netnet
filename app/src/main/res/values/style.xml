<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.TextView.Normal" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.App.TextView.Normal.Black">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Widget.App.TextView.Normal.Highlight">
        <item name="android:textColor">@android:color/holo_orange_light</item>
    </style>

    <style name="Widget.App.TextView.SubTitle" parent="TextAppearance.MaterialComponents.Subtitle1">
    </style>

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">6dp</item>
        <item name="contentPadding">12dp</item>
    </style>

    <style name="Widget.App.CardView.MorandiGreen">
        <item name="cardBackgroundColor">@color/morandi_green</item>
    </style>

    <style name="Widget.App.CardView.MorandiBlue">
        <item name="cardBackgroundColor">@color/morandi_blue</item>
    </style>

</resources>